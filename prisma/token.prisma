model Token {
  id        String   @id @map("_id") @db.ObjectId

  userId    String?  @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  email     String?
  token     Int
  used      Boolean  @default(false)
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@map("tokens")
  @@index([userId])
  @@index([email])
}
