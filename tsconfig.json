{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./utils/types",
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "*": [
        "./node_modules/*",
        "./src/utils/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.js",
    "package.json",
    "src/repositories/NotificationRepository.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "generated",
    "dist"
  ],
  "ts-node": {
    "esm": false,  // Changed from true to false
    "transpileOnly": true,
    "files": true
  }
}